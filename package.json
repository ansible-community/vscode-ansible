{
  "name": "vscode-ansible",
  "publisher": "zbr",
  "icon": "icon/icon128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ansible-community/vscode-ansible.git"
  },
  "contributors": [
    {
      "name": "Sorin Sbarnea",
      "email": "ssbarnea@redhat.com"
    }
  ],
  "bugs": "https://github.com/ansible-community/vscode-ansible/issues",
  "preview": true,
  "displayName": "vscode-ansible",
  "description": "Ansible Language Support",
  "license": "MIT",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "ansible",
    "yaml",
    "autocompletion",
    "validation"
  ],
  "activationEvents": [
    "onCommand:vscode-ansible.helloWorld",
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "yaml",
        "aliases": [
          "YAML",
          "yaml"
        ],
        "extensions": [
          ".yml",
          ".yaml"
        ]
      }
    ],
    "commands": [
      {
        "command": "vscode-ansible.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "type": "object",
      "order": 20,
      "properties": {
        "ansible.suggest.basic": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.suggest.basic%"
        },
        "ansible.validate.enable": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.validate.enable%"
        },
        "ansible.validate.executablePath": {
          "type": [
            "string",
            "null"
          ],
          "default": "ansible-lint",
          "description": "%configuration.validate.executablePath%",
          "scope": "machine-overridable"
        },
        "ansible.validate.run": {
          "type": "string",
          "enum": [
            "onSave"
          ],
          "default": "onSave",
          "description": "%configuration.validate.run%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "vscode-nls": "^5.0.0"
  }
}
